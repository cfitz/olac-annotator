- model_class = Nlp
.page-header
  %h1=t '.title', :default => @nlp.title
  =# %a.btn{ :href => "#marcModal", :role => "button", :data => {:toggle => 'modal'}} Show Marc Record

- @nlp.interests.each_with_index do |interest, index|
  %h4= "#{index + 1}. " + interest.input_field
  - interest.insights.each do |insight|
    %table.table.table-condensed
      %thead
        %tr
          %th Transcribed Name
          %th Canonical Name
          %th Transcribed Role
          %th Role Function
        %tr
          %td=  insight.raw_name
          %td= insight.canonical_name
          %td= insight.raw_role
          %td= insight.role
    
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), nlps_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_nlp_path(@nlp), :class => 'btn'
  =# link_to t('.destroy', :default => t("helpers.links.destroy")), nlp_path(@nlp), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
= render "marc_modal"