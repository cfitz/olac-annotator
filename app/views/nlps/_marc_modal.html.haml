.modal.hide.fade{ :id => 'marcModal', :tabindex=> "-1", :role => "dialog", "aria-labelledby" => "marcModalLabel", "aria-labelledby" => "true"}
  .modal-header
    %button.close{:type => "button", :data => { :dismiss => "modal"}, "aria-hidden" => "true"} x
    %h3#marcModalLabel= @nlp.title
  .modal-body
    %p= @nlp.to_marc.gsub("\n", "<br/>").html_safe
  .modal-footer
    %button.btn{ :data => {:dismiss => "modal"}, :aria => { :hidden => true}} Close